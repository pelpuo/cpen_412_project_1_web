<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/styles.css">
    <title>Document</title>
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex flex-col justify-center sm:py-12">
        <div class="p-10 xs:p-0 mx-auto md:w-full md:max-w-md">
          <h1 class="font-bold text-center text-2xl mb-5">PandaServe</h1>  
          <div class="bg-white shadow w-full rounded-sm divide-y divide-gray-200">
            <div class="px-5 py-7">
              <p class="text-red-400 mb-4 font-semibold hidden" id="error">Error message appears here</p>
              <label class="font-semibold text-sm text-gray-600 pb-1 block">E-mail</label>
              <input type="text" id="email" class="border rounded-sm px-3 py-2 mt-1 mb-5 text-sm w-full" />
              <label class="font-semibold text-sm text-gray-600 pb-1 block">Password</label>
              <input type="password" id="password" class="border rounded-sm px-3 py-2 mt-1 mb-5 text-sm w-full" />
              <button type="button" id="login" class="transition duration-200 bg-blue-500 hover:bg-blue-600 focus:bg-blue-700 focus:shadow-sm focus:ring-4 focus:ring-blue-500 focus:ring-opacity-50 text-white w-full py-2.5 rounded-sm text-sm shadow-sm hover:shadow-md font-semibold text-center inline-block">
                  <span class="inline-block mr-2">Login</span>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline-block">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
              </button>
            </div>
            <div class="py-5">
              <div class="flex items-center justify-center">
                <div class="text-center sm:text-left whitespace-nowrap">
                  <a href="/register" class="transition duration-200 mx-5 px-5 py-4 cursor-pointer font-normal text-sm rounded-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-200 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 ring-inset">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline-block align-text-top">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                      </svg>
                      <span class="inline-block ml-1">Sign Up</span>
                  </a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <script src="/public/js/login.js"></script>
</body>
</html>